<?xml version="1.0" ?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" >

  <xacro:macro name="linear_elevator" >

    <link name="linear_elevator_link" >
      <inertial>
        <origin xyz="0.017561 0.0109 0.24001" />
        <mass value="0.92399" />
        <inertia ixx="0.0097139"
                 ixy="-0.00039516"
                 ixz="-0.00086264"
                 iyy="0.0095873"
                 iyz="0.0012764"
                 izz="0.0017829" />
      </inertial>
      <visual>
        <geometry>
          <mesh filename="package://pandora_robots_description/gears/meshes/linear_elevator_link.dae" />
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://pandora_robots_description/gears/meshes/linear_elevator_link.stl" />
        </geometry>
      </collision>
    </link>

    <joint name="linear_elevator_joint"
           type="prismatic" >
      <parent link="base_link" />
      <child link="linear_elevator_link" />
      <origin xyz="0.09377 -0.00176 0.18497"
              rpy="${zero}" />
      <axis xyz="0 0 1" />
      <dynamics damping="5800.0" />
      <limit lower="${linear_elevator_joint_min_limit}"
             upper="${linear_elevator_joint_max_limit}"
             effort="100.0"
             velocity="100.0" />
    </joint>

  </xacro:macro>

</robot>

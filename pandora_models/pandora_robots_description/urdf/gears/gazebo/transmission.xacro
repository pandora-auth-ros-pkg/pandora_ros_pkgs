<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" >

<!-- Wheel ################################################################ -->

  <xacro:macro name="wheel_transmission"
               params="prefix_y prefix_x" >
    <!-- ================================================================== -->
    <transmission name="${prefix_y}_${prefix_x}_${wheel_link_name}_transmission" >

      <type>transmission_interface/SimpleTransmission</type>

      <joint name="${prefix_y}_${prefix_x}_${wheel_joint_name}_joint" />

      <actuator name="${prefix_y}_${prefix_x}_motor" >
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1.0</mechanicalReduction>
      </actuator>

    </transmission>
    <!-- ================================================================== -->
  </xacro:macro>

<!-- Sensor ############################################################### -->

  <xacro:macro name="sensor_transmission"
               params="sensor rotation" >
    <!-- ================================================================== -->
    <transmission name="${sensor}_${rotation}_transmission" >

      <type>transmission_interface/SimpleTransmission</type>

      <joint name="${sensor}_${rotation}_joint" />

      <actuator name="${sensor}_${rotation}_motor" >
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1.0</mechanicalReduction>
      </actuator>

    </transmission>
    <!-- ================================================================== -->
  </xacro:macro>

<!-- ###################################################################### -->

</robot>

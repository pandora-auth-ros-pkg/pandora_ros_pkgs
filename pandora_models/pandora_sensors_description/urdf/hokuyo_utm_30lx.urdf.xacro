<?xml version="1.0" ?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" >

  <xacro:macro name="hokuyo_caster"
               params="parent
                       control
                       roll_min_limit
                       roll_max_limit
                       pitch_min_limit
                       pitch_max_limit
                       *origin" >

    <link name="laser_link" >

      <inertial>
        <mass value="0.16" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.0002632"
                 ixy="0"
                 ixz="0"
                 iyy="0.0002632"
                 iyz="0"
                 izz="0.000162" />
      </inertial>

      <visual>
        <geometry>
          <mesh filename="package://pandora_sensors_description/meshes/hokuyo_utm_30lx/hokuyo_utm_30lx.dae" />
        </geometry>
      </visual>

      <collision>
        <origin xyz="0 0 0.05299"
                rpy="0 0 0" />
        <geometry>
          <box size="0.062 0.063 0.116" />
        </geometry>
      </collision>

    </link>

    <gazebo reference="laser_link" >

      <sensor name="laser"
              type="ray" >

        <pose>0.0225 0 0.105 0 0 0</pose>

        <ray>

          <scan>
            <horizontal>
              <samples>640</samples>
              <resolution>1</resolution>
              <min_angle>-2.26889</min_angle>
              <max_angle>2.268899</max_angle>
            </horizontal>
          </scan>

          <range>
            <min>0.08</min>
            <max>10</max>
            <resolution>0.01</resolution>
          </range>

        </ray>

        <plugin name="laser"
                filename="libRayPlugin.so" />

        <plugin name="laser2Ros"
                filename="libgazebo_ros_laser.so" >

          <topicName>/laser/scan</topicName>
          <frameName>/laser_link</frameName>

        </plugin>

        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>

      </sensor>

    </gazebo>

    <link name="hokuyo_base_link" >

      <inertial>
        <origin xyz="0.013 0.0 0.00951" />
        <mass value="0.0001" /><!--FIXME-->
        <inertia ixx="0.00000001"
                 ixy="0"
                 ixz="0"
                 iyy="0.00000001"
                 iyz="0"
                 izz="0.00000001" /><!--FIXME-->
      </inertial>

      <visual>
        <origin xyz="0 0 0"
                rpy="0 0 0" />
        <geometry>
          <mesh filename="package://pandora_sensors_description/meshes/hokuyo_utm_30lx/laser_pitch_servo.dae" />
        </geometry>
      </visual>

      <collision>
        <origin xyz="0.01285 0.00018 0.00959"
                rpy="0 0 0" />
        <geometry>
          <box size="0.032 0.038 0.050" />
        </geometry>
      </collision>

    </link>
    
    <!-- Roll Joint ########################################################-->

    <xacro:if value="${control}" >

      <joint name="laser_roll_joint"
             type="revolute" >

        <parent link="${parent}" />
        <child link="hokuyo_base_link" />

        <xacro:insert_block name="origin" />

        <axis xyz="1 0 0" />
        <limit lower="${roll_min_limit}"
               upper="${roll_max_limit}"
               effort="50"
               velocity="50.0" />

      </joint>
      
    </xacro:if>

    <xacro:unless value="${control}" >

      <joint name="laser_roll_joint"
             type="fixed" >

        <parent link="${parent}" />
        <child link="hokuyo_base_link" />

        <xacro:insert_block name="origin" />

      </joint>
      
    </xacro:unless>
    
    <!-- Pitch Joint #######################################################-->

    <xacro:if value="${control}" >

      <joint name="laser_pitch_joint"
             type="revolute" >

        <parent link="hokuyo_base_link" />
        <child link="laser_link" />

        <origin xyz="0.013 0 0.02301" 
                rpy="0 0 0" />

        <axis xyz="0 1 0" />
        <limit lower="${pitch_min_limit}"
               upper="${pitch_max_limit}"
               effort="50"
               velocity="50.0" />

      </joint>
      
    </xacro:if>

    <xacro:unless value="${control}" >

      <joint name="laser_pitch_joint"
             type="fixed" >

        <parent link="hokuyo_base_link" />
        <child link="laser_link" />

        <origin xyz="0.013 0 0.02301" 
                rpy="0 0 0" />

      </joint>
      
    </xacro:unless>

  </xacro:macro>

</robot>
